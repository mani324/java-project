<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
   <class name = "Employee" table = "Employee_Data">
      
      <meta attribute = "class-description">
         This class contains the employee detail. 
      </meta>
      
      <id name = "employee_id" type = "int" column = "Employee_ID">
         <generator class="native"/>
      </id>
      
      <property name = "employee_name" column = "Employee_Name" type = "string"/>
      <property name = "employee_salary_id" column = "EmployeeSalary_ID" type = "int"/>
      <property name = "employee_salary" column = "Employee_salary" type = "int"/>
      <property name="employee_email" column = "Employee_email" type = "String"/>
      
   </class>
</hibernate-mapping>